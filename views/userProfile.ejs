<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css">
    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.16/tailwind.min.css">
    <title>User Profile</title>
</head>
<body>
    <%userId%>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Shopping Site</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Cart</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Profile</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- User Profile Section -->
    <section class="bg-white">
        <div class="container mx-auto py-10">
            <div class="flex flex-col md:flex-row">
                <div class="md:w-1/4">
                    <div class="flex justify-center md:justify-start">
                        <img class="rounded-full w-36 h-36 object-cover" src="https://randomuser.me/api/portraits/women/79.jpg" alt="user avatar">
                    </div>
                </div>
                <div class="md:w-3/4 px-5">
                    <h1 class="text-2xl font-bold text-gray-800"><%=userId.name%></h1>
                    <p class="text-gray-700 mt-2"><%=userId.email%></p>
                    <div class="mt-5">
                        <a href="#" class="bg-blue-500 text-white px-4 py-2 rounded-md mr-3">Edit Profile</a>
                        <a href="#" class="bg-red-500 text-white px-4 py-2 rounded-md">Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-100 py-5">
        <div class="container mx-auto">
            <p class="text-center text-gray-600">&copy; 2023 Shopping Site. All rights reserved.</p>
        </div>
    </footer>

